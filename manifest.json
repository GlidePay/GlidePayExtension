{
  "manifest_version": 3,
  "name": "Glide Pay",
  "version": "1.0.0",
  "description": "Enables Web 2 payments with Cryptocurrency",
  "background": {
    "service_worker": "scripts/background.js"
  },
  "key": "hpgooldjdnhkoplnmlfgfkbmkomhomcl",
  "content_scripts": [
    {
      "matches": ["*://www.amazon.com.mx/gp/cart/*", "*://www.amazon.com/gp/cart/*", "*://www.amazon.ca/gp/cart/*", "*://www.amazon.de/*/gp/cart/*", "*://www.amazon.de/gp/cart/*", "*://www.amazon.co.uk/gp/cart/*"],
      "js": ["scripts/bundledamazon.js"]
    },
    {
      "matches": ["*://www.walmart.com/cart/*", "*://www.walmart.com/*"],
      "js": ["scripts/bundledwalmart.js"]
    },
    {
      "matches": ["*://www.aliexpress.com/p/shoppingcart*"],
      "js": ["scripts/bundledaliexpress.js"]
    },
    {
      "matches": ["*://www.costco.com/CheckoutCartDisplayView*"],
        "js": ["scripts/bundledcostco.js"]
    },
    {
      "matches": ["http://localhost/*", "https://localhost/*"],
      "js": ["scripts/localtest.js"]
    }
  ],
  "permissions": [
    "cookies",
    "tabs",
    "activeTab",
    "notifications",
    "storage",
    "windows"
  ],
  "host_permissions": ["https://www.amazon.com/*"],
  "action": {
    "default_popup": "views/popup.html",
    "default_title": "Glide Pay"
  },
  "options_page": "views/options.html"
}
